# Bot configuration (REQUIRED)
BOT_TOKEN=replace_with_bot_token
BOT_USERNAME=replace_with_bot_username
BOT_ADMIN_ID=

# Database (REQUIRED)
DATABASE_URL=postgres://postgres:postgres@localhost:5432/postintel

# Server (optional, defaults to 3000)
PORT=3000

# LLM provider (REQUIRED: one of 'openai', 'anthropic', 'deepseek')
LLM_PROVIDER=openai

# OpenAI (REQUIRED if LLM_PROVIDER=openai)
OPENAI_API_KEY=replace_with_openai_api_key
OPENAI_MODEL=gpt-4o-mini

# Anthropic (REQUIRED if LLM_PROVIDER=anthropic)
ANTHROPIC_API_KEY=replace_with_anthropic_api_key
ANTHROPIC_MODEL=claude-3-5-haiku-latest

# DeepSeek (REQUIRED if LLM_PROVIDER=deepseek)
DEEPSEEK_API_KEY=replace_with_deepseek_api_key
DEEPSEEK_MODEL=deepseek-chat
